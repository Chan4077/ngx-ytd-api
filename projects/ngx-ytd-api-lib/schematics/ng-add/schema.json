{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "ngx-ytd-api-ng-add",
  "title": "Adds ngx-ytd-api to a project",
  "description": "Schematic to add ngx-ytd-api to an Angular project",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "Name of the project.",
      "$default": {
        "$source": "projectName"
      },
      "alias": "p"
    },
    "importModules": {
      "type": "array",
      "description": "Modules to import into the project's app module.",
      "x-prompt": {
        "message": "Select the modules to import:",
        "type": "list",
        "multiselect": true,
        "items": [
          {
            "value": "comments",
            "label": "NgxYtdApiCommentsModule (Comments API)"
          },
          {
            "value": "search",
            "label": "NgxYtdApiSearchModule (Search API)"
          },
          {
            "value": "videos",
            "label": "NgxYtdApiVideosModule (Videos API)"
          }
        ]
      },
      "aliases": [
        "modules",
        "importApis",
        "import-modules",
        "import-apis"
      ]
    },
    "skipInstall": {
      "type": "boolean",
      "description": "Whether to skip the installing of dependencies.",
      "default": false,
      "alias": "skip-install"
    },
    "skipSetup": {
      "type": "boolean",
      "description": "Whether to skip setup of the ngx-ytd-api library.",
      "default": false,
      "aliases": [
        "skip-setup",
        "skipInit",
        "skip-init"
      ]
    }
  },
  "required": [],
  "additionalProperties": false
}
